<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hbm2ddl.auto">update</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/agenciasturisticas</property>
        <property name="connection.username">asier</property>
        <property name="connection.password">asier</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping class="model.Employee"/>
        <mapping class="model.Client"/>
        <mapping class="model.Tour"/>
        <mapping class="model.EmployeeRegistrationCancellation"/>
        <mapping class="model.ClientRegistrationCancelation"/>
        <mapping class="model.Bonus"/>
        <mapping class="model.EmployeeClockInClockOut"/>
    </session-factory>
</hibernate-configuration>